<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="95.0" prefWidth="600.0"
          xmlns="http://javafx.com/javafx/8"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="be.dimi.iracing.scheduler.controllers.BottomViewController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="331.0" minWidth="10.0" prefWidth="325.0"/>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="331.0" minWidth="10.0" prefWidth="325.0"/>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="349.0" minWidth="10.0" prefWidth="325.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <children>
        <Label minHeight="-Infinity" minWidth="-Infinity" prefHeight="27.0" prefWidth="100.0" text="Time:"
               GridPane.halignment="LEFT" GridPane.valignment="CENTER">
            <GridPane.margin>
                <Insets/>
            </GridPane.margin>
            <font>
                <Font name="System Bold" size="18.0"/>
            </font>
        </Label>
        <Button alignment="CENTER" mnemonicParsing="false" onAction="#refresh" prefHeight="25.0" prefWidth="150.0"
                text="Refresh" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="1"
                GridPane.valignment="CENTER">
            <GridPane.margin>
                <Insets/>
            </GridPane.margin>
        </Button>
        <Label fx:id="localTime" prefHeight="26.0" prefWidth="100.0" GridPane.halignment="RIGHT" GridPane.valignment="CENTER">
            <GridPane.margin>
                <Insets />
            </GridPane.margin>
            <font>
                <Font name="System Bold" size="17.0" />
            </font>
        </Label>
        <Label fx:id="message1" textFill="RED" GridPane.columnIndex="1" GridPane.halignment="CENTER"
               GridPane.valignment="CENTER"/>
        <Button alignment="CENTER" mnemonicParsing="false" onAction="#alarm" prefHeight="25.0" prefWidth="150.0"
                text="Set alarm" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.valignment="CENTER"/>
        <Label fx:id="message2" textFill="RED" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    </children>
</GridPane>